# MongoDB Atlas Configuration
# Replace these values with your actual MongoDB Atlas credentials

# MongoDB Atlas Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGO_URI=mongodb+srv://ecobottle:YourPassword@cluster0.xxxxx.mongodb.net/eco_bottle?retryWrites=true&w=majority

# Backend Configuration
PORT=4000
NODE_ENV=development

# Redis (keep local or use Upstash)
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Secrets (change these in production!)
JWT_SECRET=your-secret-key-here-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-here-change-in-production

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000